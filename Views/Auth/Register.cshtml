@model QuizPlatform.Models.Auth.UserInputModel

<h1>User Information Form</h1>
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in ViewBag.Error)
        {
            @error.Message<br/>
        }
    </div>
}
@using (Html.BeginForm("Register", "Auth", FormMethod.Post))
{
    <div class="form-group">
        <span>Name:</span>

        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        <br />
    </div>

    <div class="form-group">

        <span>Email:</span>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        <br />
    </div>

    <div class="form-group">

        <span>Password:</span>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        <br />
    </div>

    <div class="form-group">

        <span>Mobile:</span>
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
        <br />
    </div>

    <input id="Submit" class="btn btn-primary" type="submit" value="submit" />
}
<br />
<div class="container">
    Login   <a asp-area="" asp-controller="Auth" asp-action="Login">Login    </a>
</div>